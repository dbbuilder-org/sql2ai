# SQL2.AI API Environment Variables

# =============================================================================
# Application
# =============================================================================
SQL2AI_APP_NAME=SQL2.AI API
SQL2AI_VERSION=0.1.0
SQL2AI_DEBUG=true
SQL2AI_ENVIRONMENT=development

# =============================================================================
# Server
# =============================================================================
SQL2AI_HOST=0.0.0.0
SQL2AI_PORT=8000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
SQL2AI_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sql2ai_dev
SQL2AI_DATABASE_POOL_SIZE=10

# =============================================================================
# Redis (Cache)
# =============================================================================
SQL2AI_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Authentication (Clerk)
# =============================================================================
SQL2AI_CLERK_SECRET_KEY=sk_test_...
SQL2AI_CLERK_PUBLISHABLE_KEY=pk_test_...
SQL2AI_CLERK_WEBHOOK_SECRET=whsec_...

# =============================================================================
# JWT (for internal auth)
# =============================================================================
SQL2AI_SECRET_KEY=your-secret-key-change-in-production
SQL2AI_JWT_ALGORITHM=HS256
SQL2AI_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI/LLM Providers
# =============================================================================
SQL2AI_OPENAI_API_KEY=sk-...
SQL2AI_ANTHROPIC_API_KEY=sk-ant-...
SQL2AI_DEFAULT_LLM_MODEL=gpt-4
SQL2AI_DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
SQL2AI_AI_MAX_TOKENS=4000
SQL2AI_AI_TEMPERATURE=0.7

# =============================================================================
# Stripe (Payments)
# =============================================================================
SQL2AI_STRIPE_SECRET_KEY=sk_test_...
SQL2AI_STRIPE_PUBLISHABLE_KEY=pk_test_...
SQL2AI_STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Email (Resend)
# =============================================================================
SQL2AI_RESEND_API_KEY=re_...
SQL2AI_RESEND_FROM_EMAIL=noreply@sql2.ai

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry
SQL2AI_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SQL2AI_SENTRY_TRACES_SAMPLE_RATE=0.1

# PostHog
SQL2AI_POSTHOG_API_KEY=phc_...
SQL2AI_POSTHOG_HOST=https://app.posthog.com

# Datadog (optional)
# SQL2AI_DATADOG_API_KEY=
# SQL2AI_DATADOG_SERVICE=sql2ai-api

# =============================================================================
# Feature Flags
# =============================================================================
SQL2AI_FEATURE_AI_AGENTS=true
SQL2AI_FEATURE_COMPLIANCE_SCANNING=true
SQL2AI_FEATURE_REAL_TIME_MONITORING=true
